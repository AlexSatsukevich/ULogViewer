<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:appControls="using:CarinaStudio.ULogViewer.Controls"
		xmlns:appCtxlBased="using:CarinaStudio.ULogViewer.ViewModels.Analysis.ContextualBased"
        xmlns:asControls="using:CarinaStudio.AppSuite.Controls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CarinaStudio.ULogViewer.Controls.OperationDurationAnalysisRuleEditorDialog"
        Classes="Dialog"
        Title="{DynamicResource String/OperationDurationAnalysisRuleEditorDialog.Title}"
        Width="{DynamicResource Double/OperationDurationAnalysisRuleEditorDialog.Width}">
	
	<Window.Resources>

		<ContextMenu x:Key="addConditionMenu" PlacementMode="Bottom">
			<MenuItem Command="{Binding $parent[Window].AddVarAndConstComparisonCondition}" Header="{DynamicResource String/OperationDurationAnalysisRuleEditorDialog.VarAndConstComparisonCondition}"/>
			<MenuItem Command="{Binding $parent[Window].AddVarsComparisonCondition}" Header="{DynamicResource String/OperationDurationAnalysisRuleEditorDialog.VarsComparisonCondition}"/>
		</ContextMenu>

		<DataTemplate x:Key="conditionTemplate" DataType="{x:Type appCtxlBased:ContextualBaseAnalysisCondition}">
			<Grid ColumnDefinitions="*,Auto">
				<TextBlock Grid.Column="0" Text="{Binding}" TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
				<Border Classes="InPlaceAction_Reserved"/>
				<StackPanel Grid.Column="1" IsVisible="{Binding $parent[ListBoxItem].IsPointerOver}" Orientation="Horizontal">
					<Button Classes="InPlaceAction_Button" Command="{Binding $parent[Window].RemoveCondition}" CommandParameter="{Binding $parent[ListBoxItem]}" ToolTip.Tip="{DynamicResource String/Common.Delete}">
						<Image Classes="InPlaceAction_Icon" Source="{DynamicResource Image/Icon.Delete}"/>
					</Button>
					<Button Classes="InPlaceAction_Button" Command="{Binding $parent[Window].EditCondition}" CommandParameter="{Binding $parent[ListBoxItem]}" ToolTip.Tip="{DynamicResource String/Common.Edit}">
						<Image Classes="InPlaceAction_Icon" Source="{DynamicResource Image/Icon.Edit}"/>
					</Button>
				</StackPanel>
			</Grid>
		</DataTemplate>

	</Window.Resources>

	<Panel>

		<!-- Content -->
		<DockPanel>

			<!-- Control buttons -->
			<Border Classes="Dialog_ControlButtonsPanel">
				<StackPanel Classes="Dialog_ControlButtonsPanel">
					<Button Classes="Dialog_ControlButton" Command="{Binding $parent[Window].GenerateResultCommand}" Content="{DynamicResource String/Common.OK}"/>
					<Button Classes="Dialog_ControlButton" Command="{Binding $parent[Window].Close}" Content="{DynamicResource String/Common.Cancel}"/>
				</StackPanel>
			</Border>

			<!-- Content -->
			<ScrollViewer MaxHeight="{StaticResource Double/OperationDurationAnalysisRuleEditorDialog.Content.MaxHeight}">
				<StackPanel Classes="Dialog_ContentPanel">
					
					<!-- Operation name -->
					<TextBlock Classes="Dialog_TextBlock" Text="{DynamicResource String/OperationDurationAnalysisRuleEditorDialog.OperationName}"/>
					<TextBox Name="operationNameTextBox" Classes="Dialog_TextBox" MaxLength="256"/>
					<Separator Classes="Dialog_Separator"/>

					<!-- Beginning pattern -->
					<TextBlock Classes="Dialog_TextBlock" Text="{DynamicResource String/OperationDurationAnalysisRuleEditorDialog.BeginningPattern}"/>
					<Grid ColumnDefinitions="*,Auto">
						<TextBox Name="beginningPatternTextBox" Classes="Dialog_TextBox" Height="{StaticResource Double/OperationDurationAnalysisRuleEditorDialog.PatternTextBox.Height}" IsReadOnly="True" ScrollViewer.VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
						<Button Name="editBeginningPatternButton" Classes="BrowseButton" Command="{Binding $parent[Window].EditBeginningPattern}" Grid.Column="1" ToolTip.Tip="{DynamicResource String/Common.Edit}" VerticalAlignment="Top">
							<Image Classes="BrowseButtonIcon" Source="{StaticResource Image/Icon.Edit}"/>
						</Button>
					</Grid>
					<Separator Classes="Dialog_Separator"/>

					<!-- Ending pattern -->
					<TextBlock Classes="Dialog_TextBlock" Text="{DynamicResource String/OperationDurationAnalysisRuleEditorDialog.EndingPattern}"/>
					<Grid ColumnDefinitions="*,Auto">
						<TextBox Name="endingPatternTextBox" Classes="Dialog_TextBox" Height="{StaticResource Double/OperationDurationAnalysisRuleEditorDialog.PatternTextBox.Height}" IsReadOnly="True" ScrollViewer.VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
						<Button Classes="BrowseButton" Command="{Binding $parent[Window].EditEndingPattern}" Grid.Column="1" ToolTip.Tip="{DynamicResource String/Common.Edit}" VerticalAlignment="Top">
							<Image Classes="BrowseButtonIcon" Source="{StaticResource Image/Icon.Edit}"/>
						</Button>
					</Grid>
					<Separator Classes="Dialog_Separator"/>

					<!-- Beginning conditions -->
					<TextBlock Classes="Dialog_TextBlock" Text="{DynamicResource String/OperationDurationAnalysisRuleEditorDialog.BeginningConditions}"/>
					<Grid ColumnDefinitions="*,Auto">
						<asControls:ListBox Name="beginningConditionListBox" Classes="Dialog_ListBox" Height="{StaticResource Double/OperationDurationAnalysisRuleEditorDialog.ConditionListBox.Height}" Items="{Binding $parent[Window].BeginningConditions}">
							<asControls:ListBox.DataTemplates>
								<StaticResourceExtension ResourceKey="conditionTemplate"/>
							</asControls:ListBox.DataTemplates>
						</asControls:ListBox>
						<ToggleButton Name="addBeginningConditionButton" Classes="BrowseButton" Grid.Column="1" ToolTip.Tip="{DynamicResource String/Common.Add}" VerticalAlignment="Top">
							<Image Classes="BrowseButtonIcon" Source="{StaticResource Image/Icon.Add}"/>
						</ToggleButton>
					</Grid>
					<Separator Classes="Dialog_Separator"/>

					<!-- Ending conditions -->
					<TextBlock Classes="Dialog_TextBlock" Text="{DynamicResource String/OperationDurationAnalysisRuleEditorDialog.EndingConditions}"/>
					<Grid ColumnDefinitions="*,Auto">
						<asControls:ListBox Name="endingConditionListBox" Classes="Dialog_ListBox" Height="{StaticResource Double/OperationDurationAnalysisRuleEditorDialog.ConditionListBox.Height}" Items="{Binding $parent[Window].EndingConditions}">
							<asControls:ListBox.DataTemplates>
								<StaticResourceExtension ResourceKey="conditionTemplate"/>
							</asControls:ListBox.DataTemplates>
						</asControls:ListBox>
						<ToggleButton Name="addEndingConditionButton" Classes="BrowseButton" Grid.Column="1" ToolTip.Tip="{DynamicResource String/Common.Add}" VerticalAlignment="Top">
							<Image Classes="BrowseButtonIcon" Source="{StaticResource Image/Icon.Add}"/>
						</ToggleButton>
					</Grid>
					<Separator Classes="Dialog_Separator"/>

					<!-- Ending order -->
					<TextBlock Classes="Dialog_TextBlock" Text="{DynamicResource String/OperationDurationAnalysisRuleEditorDialog.EndingOrder}"/>
					<asControls:EnumComboBox Name="endingOrderComboBox" Classes="Dialog_ComboBox" EnumType="{x:Type appCtxlBased:OperationEndingOrder}"/>
					
				</StackPanel>
			</ScrollViewer>
			
		</DockPanel>

		<!-- Tutorial -->
		<asControls:FullWindowTutorialPresenter Name="tutorialPresenter"/>

	</Panel>
	
</Window>
