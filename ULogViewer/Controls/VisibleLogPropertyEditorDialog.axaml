<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:abControls="using:CarinaStudio.Controls"
        xmlns:appConverters="using:CarinaStudio.ULogViewer.Converters"
        xmlns:appLogs="using:CarinaStudio.ULogViewer.Logs"
		xmlns:appProfiles="using:CarinaStudio.ULogViewer.Logs.Profiles"
        xmlns:appViewModels="using:CarinaStudio.ULogViewer.ViewModels"
		xmlns:asControls="using:CarinaStudio.AppSuite.Controls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CarinaStudio.ULogViewer.Controls.VisibleLogPropertyEditorDialog"
        Classes="Dialog"
        Title="{DynamicResource String/VisibleLogPropertyEditorDialog.Title}"
        Width="{DynamicResource Double/VisibleLogPropertyEditorDialog.Width}">
	
	<Window.Styles>

		<Style Selector="ComboBox.Dialog_ComboBox /template/ ContentControl#ContentPresenter">
			<Setter Property="Grid.IsSharedSizeScope" Value="True"/>
		</Style>

	</Window.Styles>

	<DockPanel>

		<!-- Control buttons -->
		<Border Classes="Dialog_ControlButtonsPanel">
			<StackPanel Classes="Dialog_ControlButtonsPanel">
				<Button Classes="Dialog_ControlButton" Command="{Binding $parent[Window].GenerateResultCommand}" Content="{DynamicResource String/Common.OK}"/>
				<Button Classes="Dialog_ControlButton" Command="{Binding $parent[Window].Close}" Content="{DynamicResource String/Common.Cancel}"/>
			</StackPanel>
		</Border>

		<!-- Content -->
		<StackPanel Classes="Dialog_ContentPanel">

			<!-- Name -->
			<TextBlock Classes="Dialog_TextBlock" Text="{DynamicResource String/VisibleLogPropertyEditorDialog.Name}"/>
			<ComboBox Name="nameComboBox" Classes="Dialog_ComboBox" Grid.IsSharedSizeScope="True" Items="{x:Static appLogs:Log.PropertyNames}" SelectionChanged="OnNameComboBoxSelectionChanged">
				<ComboBox.ItemTemplate>
					<DataTemplate>
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="Auto" SharedSizeGroup="Name"/>
								<ColumnDefinition Width="*"/>
							</Grid.ColumnDefinitions>
							<TextBlock Text="{Binding Converter={x:Static appConverters:LogPropertyNameConverter.Default}}" TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
							<abControls:FormattedTextBlock Arg1="{Binding}" Format="({0})" Grid.Column="1" Margin="{StaticResource Thickness/VisibleLogPropertyEditorDialog.NameComboBox.Name.Margin}" Opacity="{StaticResource Double/VisibleLogPropertyEditorDialog.NameComboBox.Name.Opacity}" TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
						</Grid>
					</DataTemplate>
				</ComboBox.ItemTemplate>
			</ComboBox>
			<Separator Classes="Dialog_Separator"/>

			<!-- Display name -->
			<TextBlock Classes="Dialog_TextBlock" Text="{DynamicResource String/VisibleLogPropertyEditorDialog.DisplayName}"/>
			<ComboBox Name="displayNameComboBox" Classes="Dialog_ComboBox" Grid.IsSharedSizeScope="True" IsVisible="{Binding !#customDisplayNameSwitch.IsChecked}" Items="{x:Static appViewModels:DisplayableLogProperty.DisplayNames}">
				<ComboBox.ItemTemplate>
					<DataTemplate>
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="Auto" SharedSizeGroup="Name"/>
								<ColumnDefinition Width="*"/>
							</Grid.ColumnDefinitions>
							<TextBlock Text="{Binding Converter={x:Static appConverters:LogPropertyNameConverter.Default}}" TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
							<abControls:FormattedTextBlock Arg1="{Binding}" Format="({0})" Grid.Column="1" Margin="{StaticResource Thickness/VisibleLogPropertyEditorDialog.NameComboBox.Name.Margin}" Opacity="{StaticResource Double/VisibleLogPropertyEditorDialog.NameComboBox.Name.Opacity}" TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
						</Grid>
					</DataTemplate>
				</ComboBox.ItemTemplate>
			</ComboBox>
			<TextBox Name="customDisplayNameTextBox" IsVisible="{Binding #customDisplayNameSwitch.IsChecked}" PropertyChanged="OnEditorControlPropertyChanged"/>
			<Separator Classes="Dialog_Separator"/>

			<!-- Custom display name -->
			<TextBlock Classes="Dialog_TextBlock" Text="{DynamicResource String/VisibleLogPropertyEditorDialog.CustomDisplayName}"/>
			<ToggleSwitch Name="customDisplayNameSwitch" Classes="Dialog_ToggleSwitch" PropertyChanged="OnEditorControlPropertyChanged"/>
			<Separator Classes="Dialog_Separator"/>

			<!-- Foreground color -->
			<TextBlock Classes="Dialog_TextBlock" Text="{DynamicResource String/VisibleLogPropertyEditorDialog.ForegroundColor}"/>
			<asControls:EnumComboBox Name="foregroundColorComboBox" Classes="Dialog_ComboBox" EnumType="{x:Type appProfiles:LogPropertyForegroundColor}"/>
			<Separator Classes="Dialog_Separator"/>

			<!-- Width -->
			<TextBlock Classes="Dialog_TextBlock" Text="{DynamicResource String/VisibleLogPropertyEditorDialog.SpecifyWidth}"/>
			<ToggleSwitch Name="specifyWidthSwitch"/>
			<Separator Classes="Dialog_Separator"/>
			<TextBlock Classes="Dialog_TextBlock" Text="{DynamicResource String/VisibleLogPropertyEditorDialog.Width}"/>
			<abControls:IntegerTextBox Name="widthTextBox" Classes="Dialog_TextBox" IsEnabled="{Binding #specifyWidthSwitch.IsChecked}" IsNullValueAllowed="False" Minimum="10"/>
			
		</StackPanel>
		
	</DockPanel>
  
</Window>
