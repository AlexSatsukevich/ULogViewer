<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:abControls="using:CarinaStudio.Controls"
		xmlns:abConverters="using:CarinaStudio.Data.Converters"
		xmlns:aConverters="using:Avalonia.Data.Converters"
		xmlns:appControls="using:CarinaStudio.ULogViewer.Controls"
		xmlns:appConverters="using:CarinaStudio.ULogViewer.Converters"
		xmlns:appCtxlBased="using:CarinaStudio.ULogViewer.ViewModels.Analysis.ContextualBased"
        xmlns:asControls="using:CarinaStudio.AppSuite.Controls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CarinaStudio.ULogViewer.Controls.LogAnalysisScriptSetEditorDialog"
		Name="window"
		CanResize="True"
        Classes="Dialog"
		Height="{DynamicResource Double/LogAnalysisScriptSetEditorDialog.Height}"
		Icon="/ULogViewer.ico"
        MinHeight="{DynamicResource Double/LogAnalysisScriptSetEditorDialog.MinHeight}"
        MinWidth="{DynamicResource Double/LogAnalysisScriptSetEditorDialog.MinWidth}"
		SizeToContent="Manual"
        Title="{DynamicResource String/LogAnalysisScriptSetEditorDialog.Title}"
        Width="{DynamicResource Double/LogAnalysisScriptSetEditorDialog.Width}">
	
	<Window.Resources>
		<DataTemplate x:Key="scriptCompilationResultTemplate">
		<Grid ColumnDefinitions="Auto,*">
			<Image Classes="Dialog_Icon" Source="{Binding Type, Converter={x:Static appControls:LogAnalysisScriptSetEditorDialog.CompilationResultTypeIconConverter}}" VerticalAlignment="Center"/>
			<TextBlock Classes="Dialog_Icon_TextBlock" Foreground="{Binding Type, Converter={x:Static appControls:LogAnalysisScriptSetEditorDialog.CompilationResultTypeBrushConverter}}" Grid.Column="1" Text="{Binding Message}" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" VerticalAlignment="Center"/>
		</Grid>
		</DataTemplate>
	</Window.Resources>

	<DockPanel>

		<!-- Control buttons -->
		<Border Classes="Dialog_ControlButtonsPanel">
			<StackPanel Classes="Dialog_ControlButtonsPanel">
				<Button Classes="Dialog_IconControlButton" Command="{Binding $parent[Window].OpenDocumentation}" ToolTip.Tip="{DynamicResource String/Common.Help}">
					<Image Classes="Dialog_IconControlButton_Icon" Source="{StaticResource Image/Icon.Question}"/>
				</Button>
				<Separator Classes="Dialog_Separator_Small"/>
				<Button Classes="Dialog_ControlButton" Command="{Binding $parent[Window].CompleteEditing}" Content="{DynamicResource String/Common.OK}" IsEnabled="{Binding $parent[Window].AreValidParameters}"/>
				<Button Classes="Dialog_ControlButton" Command="{Binding $parent[Window].Close}" Content="{DynamicResource String/Common.Cancel}"/>
			</StackPanel>
		</Border>

		<!-- Content -->
		<ScrollViewer Name="contentScrollViewer" HorizontalScrollBarVisibility="Disabled">
			<StackPanel Classes="Dialog_ContentPanel">
				
				<!-- Name -->
				<TextBlock Classes="Dialog_TextBlock" Text="{DynamicResource String/LogAnalysisScriptSetEditorDialog.Name}"/>
				<TextBox Name="nameTextBox" Classes="Dialog_TextBox" MaxLength="256"/>
				<Separator Classes="Dialog_Separator"/>

				<!-- Icon -->
				<TextBlock Classes="Dialog_TextBlock" Text="{DynamicResource String/LogAnalysisScriptSetEditorDialog.Icon}"/>
				<ComboBox Name="iconComboBox" Classes="Dialog_ComboBox" Items="{Binding $parent[Window].Icons}">
					<ComboBox.ItemTemplate>
						<DataTemplate>
							<Grid ColumnDefinitions="Auto,*">
								<Panel Classes="ComboBoxItem_Icon">
									<Image Classes="Icon" IsVisible="{Binding $parent[ComboBoxItem].IsSelected}" Source="{Binding Converter={x:Static appConverters:LogProfileIconConverter.Default}, ConverterParameter=Light}"/>
									<Image Classes="Icon" IsVisible="{Binding !$parent[ComboBoxItem].IsSelected}" Source="{Binding Converter={x:Static appConverters:LogProfileIconConverter.Default}}"/>
								</Panel>
								<TextBlock Classes="ComboBoxItem_TextBlock" Grid.Column="1" Text="{Binding Converter={x:Static appControls:LogProfileEditorDialog.LogProfileIconNameConverter}}"/>
							</Grid>
						</DataTemplate>
					</ComboBox.ItemTemplate>
				</ComboBox>
				<Separator Classes="Dialog_Separator"/>

				<!-- Analysis script -->
				<TextBlock Classes="Dialog_TextBlock" Text="{DynamicResource String/LogAnalysisScriptSetEditorDialog.AnalysisScript}"/>
				<appControls:ScriptEditor Name="analysisScriptEditor" Height="{StaticResource Double/LogAnalysisScriptSetEditorDialog.ScriptEditor.Height}" HorizontalAlignment="Stretch"/>
				<StackPanel IsVisible="{Binding $parent[Window].AnalysisScriptCompilationResults.Count}">
					<Separator Classes="Dialog_Separator_Small"/>
					<ListBox Name="analysisScriptCompilationResultListBox" Background="{x:Null}" BorderThickness="0" Focusable="False" Items="{Binding $parent[Window].AnalysisScriptCompilationResults}" Margin="{StaticResource Thickness/LogAnalysisScriptSetEditorDialog.ScriptCompilationResults.Margin}" Padding="0" ScrollViewer.VerticalScrollBarVisibility="Disabled" VirtualizationMode="None">
						<ListBox.ItemTemplate>
							<StaticResourceExtension ResourceKey="scriptCompilationResultTemplate"/>
						</ListBox.ItemTemplate>
						<ListBox.Styles>
							<Style Selector="ListBoxItem">
								<Setter Property="Cursor" Value="Hand"/>
								<Setter Property="Padding" Value="{StaticResource Thickness/LogAnalysisScriptSetEditorDialog.ScriptCompilationResults.Item.Padding}"/> 
							</Style>
						</ListBox.Styles>
					</ListBox>
				</StackPanel>
				<TextBlock Classes="Dialog_TextBlock_Description" Text="{DynamicResource String/LogAnalysisScriptSetEditorDialog.AnalysisScript.Description}"/>
				<Separator Classes="Dialog_Separator"/>

				<!-- Setup script -->
				<TextBlock Classes="Dialog_TextBlock" Text="{DynamicResource String/LogAnalysisScriptSetEditorDialog.SetupScript}"/>
				<appControls:ScriptEditor Name="setupScriptEditor" Height="{StaticResource Double/LogAnalysisScriptSetEditorDialog.ScriptEditor.Height}" HorizontalAlignment="Stretch"/>
				<StackPanel IsVisible="{Binding $parent[Window].SetupScriptCompilationResults.Count}">
					<Separator Classes="Dialog_Separator_Small"/>
					<ListBox Name="setupScriptCompilationResultListBox" Background="{x:Null}" BorderThickness="0" Focusable="False" Items="{Binding $parent[Window].SetupScriptCompilationResults}" Margin="{StaticResource Thickness/LogAnalysisScriptSetEditorDialog.ScriptCompilationResults.Margin}" Padding="0" ScrollViewer.VerticalScrollBarVisibility="Disabled" VirtualizationMode="None">
						<ListBox.ItemTemplate>
							<StaticResourceExtension ResourceKey="scriptCompilationResultTemplate"/>
						</ListBox.ItemTemplate>
						<ListBox.Styles>
							<Style Selector="ListBoxItem">
								<Setter Property="Cursor" Value="Hand"/>
								<Setter Property="Padding" Value="{StaticResource Thickness/LogAnalysisScriptSetEditorDialog.ScriptCompilationResults.Item.Padding}"/> 
							</Style>
						</ListBox.Styles>
					</ListBox>
				</StackPanel>
				<TextBlock Classes="Dialog_TextBlock_Description" Text="{DynamicResource String/LogAnalysisScriptSetEditorDialog.SetupScript.Description}"/>
				
			</StackPanel>
		</ScrollViewer>
		
	</DockPanel>
	
</Window>
